---
import Layout from '../layouts/Layout.astro';
import { projects } from '../components/projects';
---

<Layout title="Projects">
  <div class="space-y-8">
    <header class="fade-in-up max-w-2xl">
      <h1 class="font-heading text-4xl font-bold text-[#111111] dark:text-[#f5f5f7] md:text-5xl">
        Projects
      </h1>
      <p class="mt-4 text-lg text-[#666666] dark:text-[#c4c7c5]">
        Selected lab and community projects with a focus on reproducible research infrastructure,
        learning analytics, and open collaboration.
      </p>
    </header>

    <div class="fade-in-up animation-delay-200 flex flex-col border-t border-gray-200 dark:border-gray-800">
      {
        projects.map((project) => (
          <a
            href={project.url}
            target="_blank"
            rel="noopener noreferrer"
            class="group block space-y-3 no-underline border-b border-gray-200 dark:border-gray-800 py-6 hover:bg-gray-50 dark:hover:bg-gray-800/50 -mx-4 px-4 transition-colors"
          >
            <div class="flex flex-col sm:flex-row sm:items-baseline sm:justify-between gap-2">
              <h2 class="font-heading text-xl font-bold text-[#111111] group-hover:text-accent-600 dark:text-[#f5f5f7] dark:group-hover:text-accent-400 transition-colors">
                {project.title}
              </h2>
              <div class="flex flex-wrap gap-2">
                {project.tech.map((tag) => (
                  <span class="text-xs font-medium text-[#666666] dark:text-[#c4c7c5] bg-gray-100 dark:bg-gray-800 px-2 py-0.5 rounded">
                    {tag}
                  </span>
                ))}
              </div>
            </div>
            <p class="text-sm leading-relaxed text-[#666666] dark:text-[#c4c7c5] max-w-3xl">
              {project.description}
            </p>
          </a>
        ))
      }
    </div>
  </div>
</Layout>
