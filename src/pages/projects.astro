---
import Layout from '../layouts/Layout.astro';
import { projects } from '../components/projects';
---

<Layout title="Projects">
  <div class="space-y-8">
    <header class="fade-in-up max-w-2xl">
      <h1 class="font-heading text-4xl font-bold text-[#111111] dark:text-[#f5f5f7] md:text-5xl">
        Projects
      </h1>
      <p class="mt-4 text-lg text-[#666666] dark:text-[#c4c7c5]">
        Selected lab and community projects with a focus on reproducible research infrastructure,
        learning analytics, and open collaboration.
      </p>
    </header>

    <div class="fade-in-up animation-delay-200 grid gap-x-8 gap-y-8 md:grid-cols-2 lg:grid-cols-3">
      {
        projects.map((project) => (
          <a
            href={project.url}
            target="_blank"
            rel="noopener noreferrer"
            class="group block space-y-3 no-underline"
          >
            <div class="flex items-center justify-between">
              <h2 class="font-heading text-xl font-bold text-[#111111] group-hover:text-accent-600 dark:text-[#f5f5f7] dark:group-hover:text-accent-400 transition-colors">
                {project.title}
              </h2>
              <span class="i-ph-arrow-up-right text-[#666666] opacity-0 transition-all group-hover:opacity-100 dark:text-[#c4c7c5]" />
            </div>
            <p class="text-sm leading-relaxed text-[#666666] dark:text-[#c4c7c5]">
              {project.description}
            </p>
            <div class="flex flex-wrap gap-2 pt-1">
              {project.tech.map((tag) => (
                <span class="rounded-md bg-[#1f1f1f]/5 px-2 py-1 text-xs font-medium text-[#666666] dark:bg-[#e3e3e3]/10 dark:text-[#c4c7c5]">
                  {tag}
                </span>
              ))}
            </div>
          </a>
        ))
      }
    </div>
  </div>
</Layout>
