---
import Layout from '../layouts/Layout.astro';
import { projects } from '../components/projects';
---

<Layout title="Projects">
  <div class="space-y-6">
        <header class="fade-in-up max-w-2xl">
      <h1 class="font-heading text-4xl font-bold text-gray-900 dark:text-gray-100 md:text-5xl">
        Projects
      </h1>
      <p class="mt-4 text-lg text-gray-600 dark:text-gray-400">
        Selected lab and community projects with a focus on reproducible research infrastructure,
        learning analytics, and open collaboration.
      </p>
    </header>

    <div class="fade-in-up animation-delay-200 flex flex-col divide-y divide-gray-200 dark:divide-gray-800">
      {
        projects.map((project) => (
          <a
            href={project.url}
            target="_blank"
            rel="noopener noreferrer"
            class="group block space-y-0.5 py-4 first:pt-0 last:pb-0 no-underline"
          >
            <div class="flex flex-col sm:flex-row sm:items-baseline sm:justify-between gap-2">
              <h2 class="font-heading text-xl font-bold text-gray-900 group-hover:text-accent-600 dark:text-gray-100 dark:group-hover:text-accent-400 transition-colors">
                {project.title}
              </h2>
              <div class="flex flex-wrap gap-2">
                {project.tech.map((tag) => (
                  <span class="text-xs font-medium text-gray-600 dark:text-gray-400 bg-gray-100 dark:bg-gray-800 px-2 py-0.5 rounded">
                    {tag}
                  </span>
                ))}
              </div>
            </div>
            <p class="text-sm leading-relaxed text-gray-600 dark:text-gray-400 max-w-3xl">
              {project.description}
            </p>
          </a>
        ))
      }
    </div>
  </div>
</Layout>
