---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('posts'))
	.filter((post) => !post.data.draft)
	.sort(
		(a, b) =>
			new Date(b.data.publishedAt).getTime() - new Date(a.data.publishedAt).getTime()
	);
---

<Layout title="Posts">
  <div class="space-y-8">
    <header class="fade-in-up max-w-2xl">
      <h1 class="font-heading text-4xl font-bold text-[#111111] dark:text-[#f5f5f7] md:text-5xl">
        Posts
      </h1>
      <p class="mt-4 text-lg text-[#666666] dark:text-[#c4c7c5]">
        Thoughts, updates, and reflections on research, teaching, and technology.
      </p>
    </header>

    <div class="fade-in-up animation-delay-200 space-y-8">
      {posts.map((post) => (
        <article class="group relative flex flex-col gap-1">
          <div class="flex flex-col gap-1">
            <h2 class="text-lg font-bold text-[#111111] dark:text-[#f5f5f7] leading-snug font-heading">
              <a href={`/posts/${post.slug}`} class="hover:text-accent-600 dark:hover:text-accent-400 transition-colors no-underline text-inherit">
                {post.data.title}
              </a>
            </h2>
            <div class="text-sm text-[#666666] dark:text-[#c4c7c5]">
              <time datetime={post.data.publishedAt.toISOString()}>
                {post.data.publishedAt.toLocaleDateString('en-us', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric',
                })}
              </time>
            </div>
            <p class="text-sm text-[#666666] dark:text-[#c4c7c5] line-clamp-2">
              {post.data.description}
            </p>
          </div>
        </article>
      ))}
    </div>
  </div>
</Layout>
