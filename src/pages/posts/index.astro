---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('posts'))
	.filter((post) => !post.data.draft)
	.sort(
		(a, b) =>
			new Date(b.data.publishedAt).getTime() - new Date(a.data.publishedAt).getTime()
	);
---

<Layout title="Posts">
  <div class="space-y-6">
    <header class="fade-in-up max-w-2xl">
      <h1 class="font-heading text-4xl font-bold text-[#111111] dark:text-[#f5f5f7] md:text-5xl">
        Posts
      </h1>
      <p class="mt-4 text-lg text-[#666666] dark:text-[#c4c7c5]">
        Thoughts, updates, and reflections on research, teaching, and technology.
      </p>
    </header>

    <div class="fade-in-up animation-delay-200 flex flex-col border-t border-gray-200 dark:border-gray-800">
      {posts.map((post) => (
        <a href={`/posts/${post.slug}`} class="group block no-underline border-b border-gray-200 dark:border-gray-800 py-4 hover:bg-gray-50 dark:hover:bg-gray-800/50 -mx-4 px-4 transition-colors">
          <article class="flex flex-col gap-1">
            <div class="flex flex-col gap-1">
              <h2 class="text-lg font-bold text-[#111111] group-hover:text-accent-600 dark:text-[#f5f5f7] dark:group-hover:text-accent-400 transition-colors leading-snug font-heading">
                {post.data.title}
              </h2>
              <div class="text-sm text-[#666666] dark:text-[#c4c7c5]">
                <time datetime={post.data.publishedAt.toISOString()}>
                  {post.data.publishedAt.toLocaleDateString('en-us', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                  })}
                </time>
              </div>
              <p class="text-sm text-[#666666] dark:text-[#c4c7c5] line-clamp-2">
                {post.data.description}
              </p>
            </div>
          </article>
        </a>
      ))}
    </div>
  </div>
</Layout>
