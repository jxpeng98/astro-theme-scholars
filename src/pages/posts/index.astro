---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('posts'))
	.filter((post) => !post.data.draft)
	.sort(
		(a, b) =>
			new Date(b.data.publishedAt).getTime() - new Date(a.data.publishedAt).getTime()
	);
---

<Layout>
	<section class="flex flex-col gap-3 mb-8">
		<h1 class="font-heading text-[clamp(2rem,3vw,2.6rem)] font-semibold text-slate-900 dark:text-slate-100">Posts</h1>
		<p class="m-0 text-slate-600 dark:text-slate-300 max-w-[65ch]">
			Field notes, lab updates, and essays on infrastructure for learning analytics and open research.
		</p>
	</section>

	<section>
		<ul class="grid gap-5 list-none m-0 p-0">
			{posts.map((post) => (
				<li>
					<a
						class="flex flex-col gap-3 px-6 py-5 border border-slate-200 dark:border-slate-700 rounded-2xl bg-white dark:bg-slate-900 no-underline text-slate-900 dark:text-slate-100 shadow-[0_12px_30px_rgba(15,23,42,0.08)] dark:shadow-[0_20px_50px_rgba(8,8,16,0.45)] transition duration-200 hover:-translate-y-1 hover:shadow-[0_20px_40px_rgba(76,29,149,0.18)] dark:hover:shadow-[0_24px_48px_rgba(10,10,20,0.55)]"
						href={`/posts/${post.slug}`}
					>
						<h2 class="font-heading text-[clamp(1.2rem,2vw,1.6rem)] font-semibold">{post.data.title}</h2>
						<p class="m-0 text-slate-600 dark:text-slate-300">{post.data.description}</p>
						<time class="text-sm text-slate-500 dark:text-slate-400" datetime={post.data.publishedAt.toISOString()}>
							{new Date(post.data.publishedAt).toLocaleDateString(undefined, {
								year: 'numeric',
								month: 'long',
								day: 'numeric'
							})}
						</time>
					</a>
				</li>
			))}
		</ul>
	</section>
</Layout>
