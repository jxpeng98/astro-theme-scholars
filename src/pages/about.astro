---
import Layout from "../layouts/Layout.astro";
import aboutRaw from "../data/about.yml?raw";
import siteConfig from "../side.config";
import { parse } from "yaml";

interface CustomItem {
  title?: string;
  subtitle?: string;
  date?: string;
  description?: string;
  link?: string;
}

interface CustomSection {
  title: string;
  items: (string | CustomItem)[];
}

interface AboutData {
  hero: {
    title: string;
    description: string;
  };
  profile: Array<{ label: string; value: string }>;
  experience: Array<{
    role: string;
    organization: string;
    period: string;
    bullets: string[];
  }>;
  service: Array<
    string | { role: string; organization: string; period: string }
  >;
  education?: Array<{
    degree: string;
    institution: string;
    year: string | number;
  }>;
  sections?: CustomSection[];
}

const aboutData = parse(aboutRaw) as AboutData;
const {
  hero,
  profile,
  experience,
  service,
  education = [],
  sections = [],
} = aboutData;

const pageDescription = siteConfig.pageDescriptions?.about || hero.description;
---

<Layout title="About">
  <div class="space-y-6">
    <!-- Page Header -->
    <header class="space-y-1">
      <h1 class="text-2xl font-bold text-gray-900 dark:text-gray-100">
        {hero.title}
      </h1>
      <p class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed max-w-2xl">
        {pageDescription}
      </p>
    </header>

    <div class="fade-in-up animation-delay-200 space-y-8">
      <!-- Education Section -->
      {
        education.length > 0 && (
          <section class="space-y-3">
            <h2 class="text-sm font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wide">Education</h2>
            <div class="space-y-3">
              {education.map((edu) => (
                <div class="group relative p-4 rounded-xl bg-white dark:bg-gray-900/50 border border-gray-200 dark:border-gray-800 hover:border-accent-300 dark:hover:border-accent-700 hover:shadow-lg hover:shadow-accent-500/5 transition-all duration-300">
                  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2">
                    <div class="flex items-start gap-3">
                      <div class="p-2 rounded-lg bg-accent-50 dark:bg-accent-900/30">
                        <span class="i-mdi:school text-lg text-accent-600 dark:text-accent-400"></span>
                      </div>
                      <div class="space-y-0.5">
                        <h3 class="font-bold text-gray-900 dark:text-gray-100">{edu.degree}</h3>
                        <p class="text-sm text-gray-600 dark:text-gray-400 flex items-center gap-1">
                          <span class="i-mdi:domain text-gray-400 dark:text-gray-500"></span>
                          {edu.institution}
                        </p>
                      </div>
                    </div>
                    <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded-md text-xs font-semibold text-accent-700 dark:text-accent-300 bg-accent-50 dark:bg-accent-900/40 border border-accent-200 dark:border-accent-800">
                      <span class="i-mdi:calendar text-accent-500"></span>
                      {edu.year}
                    </span>
                  </div>
                </div>
              ))}
            </div>
          </section>
        )
      }

      <!-- Experience Section -->
      <section class="space-y-3">
        <h2 class="text-sm font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wide">Experience</h2>
        <div class="space-y-4">
          {
            experience.map((exp) => (
              <div class="group relative p-5 rounded-xl bg-white dark:bg-gray-900/50 border border-gray-200 dark:border-gray-800 hover:border-accent-300 dark:hover:border-accent-700 hover:shadow-lg hover:shadow-accent-500/5 transition-all duration-300">
                <!-- Timeline dot -->
                <div class="absolute -left-2 top-6 w-4 h-4 rounded-full bg-accent-500 border-3 border-white dark:border-gray-900 shadow-sm"></div>
                
                <div class="space-y-3">
                  <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-2">
                    <div class="space-y-1">
                      <h3 class="font-bold text-gray-900 dark:text-gray-100">{exp.role}</h3>
                      <p class="text-sm text-gray-600 dark:text-gray-400 flex items-center gap-1.5">
                        <span class="i-mdi:office-building text-gray-400 dark:text-gray-500"></span>
                        {exp.organization}
                      </p>
                    </div>
                    <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded-md text-xs font-semibold text-accent-700 dark:text-accent-300 bg-accent-50 dark:bg-accent-900/40 border border-accent-200 dark:border-accent-800 whitespace-nowrap shrink-0">
                      <span class="i-mdi:calendar-range text-accent-500"></span>
                      {exp.period}
                    </span>
                  </div>
                  
                  <ul class="space-y-2 pl-1">
                    {exp.bullets.map((bullet) => (
                      <li class="flex items-start gap-2.5 text-sm text-gray-600 dark:text-gray-400">
                        <span class="i-mdi:check-circle text-accent-500 dark:text-accent-400 shrink-0 mt-0.5" />
                        <span class="leading-relaxed">{bullet}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              </div>
            ))
          }
        </div>
      </section>

      <!-- Service Section -->
      <section class="space-y-3">
        <h2 class="text-sm font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wide">Academic Service</h2>
        <div class="grid gap-3 sm:grid-cols-2">
          {
            service.map((item) => {
              if (typeof item === "string") {
                return (
                  <div class="group flex items-start gap-3 p-4 rounded-xl bg-white dark:bg-gray-900/50 border border-gray-200 dark:border-gray-800 hover:border-accent-300 dark:hover:border-accent-700 hover:shadow-lg hover:shadow-accent-500/5 transition-all duration-300">
                    <div class="p-1.5 rounded-lg bg-accent-50 dark:bg-accent-900/30 shrink-0">
                      <span class="i-mdi:star text-accent-500 dark:text-accent-400" />
                    </div>
                    <span class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed">{item}</span>
                  </div>
                );
              }
              return (
                <div class="group flex items-start gap-3 p-4 rounded-xl bg-white dark:bg-gray-900/50 border border-gray-200 dark:border-gray-800 hover:border-accent-300 dark:hover:border-accent-700 hover:shadow-lg hover:shadow-accent-500/5 transition-all duration-300">
                  <div class="p-1.5 rounded-lg bg-accent-50 dark:bg-accent-900/30 shrink-0">
                    <span class="i-mdi:star text-accent-500 dark:text-accent-400" />
                  </div>
                  <div class="text-sm space-y-0.5">
                    <p class="font-semibold text-gray-900 dark:text-gray-100">{item.role}</p>
                    <p class="text-gray-600 dark:text-gray-400 flex items-center gap-1">
                      <span class="i-mdi:domain text-gray-400 dark:text-gray-500 text-xs"></span>
                      {item.organization}
                    </p>
                    <span class="inline-flex items-center gap-1 text-xs text-gray-500 dark:text-gray-500">
                      <span class="i-mdi:calendar text-xs"></span>
                      {item.period}
                    </span>
                  </div>
                </div>
              );
            })
          }
        </div>
      </section>

      <!-- Custom Sections (Awards, etc.) -->
      {
        sections.map((section) => (
          <section class="space-y-3">
            <h2 class="text-sm font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wide">{section.title}</h2>
            <div class="space-y-3">
              {section.items.map((item) => {
                if (typeof item === "string") {
                  return (
                    <div class="group flex items-start gap-3 p-4 rounded-xl bg-white dark:bg-gray-900/50 border border-gray-200 dark:border-gray-800 hover:border-accent-300 dark:hover:border-accent-700 hover:shadow-lg hover:shadow-accent-500/5 transition-all duration-300">
                      <div class="p-1.5 rounded-lg bg-amber-50 dark:bg-amber-900/30 shrink-0">
                        <span class="i-mdi:medal text-amber-500 dark:text-amber-400" />
                      </div>
                      <span class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed">{item}</span>
                    </div>
                  );
                }
                return (
                  <div class="group relative p-5 rounded-xl bg-white dark:bg-gray-900/50 border border-gray-200 dark:border-gray-800 hover:border-accent-300 dark:hover:border-accent-700 hover:shadow-lg hover:shadow-accent-500/5 transition-all duration-300">
                    <!-- Decorative gradient -->
                    <div class="absolute inset-0 rounded-xl bg-gradient-to-br from-amber-50/50 to-transparent dark:from-amber-900/10 dark:to-transparent pointer-events-none"></div>
                    
                    <div class="relative flex flex-col sm:flex-row sm:items-start gap-3">
                      <div class="p-2 rounded-lg bg-amber-50 dark:bg-amber-900/30 shrink-0">
                        <span class="i-mdi:trophy text-lg text-amber-500 dark:text-amber-400" />
                      </div>
                      <div class="flex-1 space-y-1">
                        {item.title && (
                          <h3 class="font-bold text-gray-900 dark:text-gray-100">
                            {item.link ? (
                              <a href={item.link} target="_blank" rel="noreferrer" class="hover:text-accent-600 dark:hover:text-accent-400 transition-colors no-underline text-inherit inline-flex items-center gap-1">
                                {item.title}
                                <span class="i-mdi:open-in-new text-xs text-gray-400 opacity-0 group-hover:opacity-100 transition-opacity"></span>
                              </a>
                            ) : item.title}
                          </h3>
                        )}
                        {item.subtitle && (
                          <p class="text-sm font-medium text-accent-600 dark:text-accent-400">{item.subtitle}</p>
                        )}
                        {item.description && (
                          <p class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed">{item.description}</p>
                        )}
                      </div>
                      {item.date && (
                        <span class="inline-flex items-center gap-1 px-2 py-1 rounded-md text-xs font-medium text-gray-600 dark:text-gray-400 bg-gray-100 dark:bg-gray-800 shrink-0">
                          <span class="i-mdi:calendar text-gray-400 dark:text-gray-500 text-xs"></span>
                          {item.date}
                        </span>
                      )}
                    </div>
                  </div>
                );
              })}
            </div>
          </section>
        ))
      }
    </div>
  </div>
</Layout>
